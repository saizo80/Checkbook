import tkinter as tk
from tkinter import ttk
import checkbookFunctions, os


def center(win):
    win.update_idletasks()

    width = win.winfo_width()
    height = win.winfo_height()
    
    x = (win.winfo_screenwidth() // 2) - (width // 2)
    y = (win.winfo_screenheight() // 2) - (height // 2)
    
    win.geometry('{}x{}+{}+{}'.format(width, height, x, y)) 


if __name__ == "__main__":
    LARGEFONT = ("Arial", 35)
    NORMALFONT = ("Arial", 15)
    greyBG = "#696969"
    tty = checkbookFunctions.Functions()
    
    root = tk.Tk()
    
    os.system("clear")
    root.geometry("800x500")
    center(root)
    root.configure(bg=greyBG)
    root.title("Virtual Checkbook")
    
    headerLabel = tk.Label(root, text="Checkbook", font=LARGEFONT, bg=greyBG, fg="white")
    headerLabel.configure(anchor='center')
    headerLabel.grid(row=1, column=2, pady=10)
    
    budgetFrame = ttk.Frame(root, width=50, height=50)
    
    for i in range(10):
        button = ttk.Button(budgetFrame, text="{}".format(i), width=40)
        button.pack()
    
    budgetFrame.grid(row=4, column=0)
    
    quitButton = tk.Button(root, text="Quit", font=NORMALFONT, highlightbackground=greyBG, 
                           fg='white', command = tty.kill, width=15)
    quitButton.grid(row=5, column=2, pady=10)
    
    root.mainloop()    